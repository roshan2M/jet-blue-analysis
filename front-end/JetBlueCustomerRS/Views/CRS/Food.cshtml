        this.style.backgroundColor = '#ff8200';
    };
    div2.onmouseout = function () {
        this.style.backgroundColor = '#6087db';
    };
    var div3 = document.getElementById('third');
    div3.onmouseover = function () {
        this.style.backgroundColor = '#ff8200';
    };
    div3.onmouseout = function () {
        this.style.backgroundColor = '#2c64db';
    };
    var div4 = document.getElementById('fourth');
    div4.onmouseover = function () {
